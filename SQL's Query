--USE go 
	--this code to start the database you want to use
	USE databaseName
	GO
	--Example
	USE NiceTry
	go

--SELECT

    --Select (Called for the result data in database)
    SELECT columnName1, columnName2,columnName3 From tableName

    Select * from tableName --Will called or select the all result in the tableName
    
    --To call unduplicate field or data in table
    SELECT DISTINCT columnName FROM tableName
    
    --For show or call the counted data
    SELECT COUNT(*) columnName FROM tableName 

--CREATE    

    Create Database NiceTry --for Create our Database
    CREATE TABLE table_name(
            column1 datatype,
            column2 datatype,
            column3 datatype,
            .....
            columnN datatype,
            PRIMARY KEY( one or more columns )  
             );

     --EXAMPLE:
        Create table human (
	              humanID int,
	              humanName varchar(255),
	              humanSurname varchar(255)
                    );

        Create table animals(
	                animalID int,
	                animalName varchar(255),
	                animalType varchar(255)
                    )
                    
                    --if u just write "CREATE table human" the code will error
--DROP
    --This query is for drop (delete) the database
    DROP DATABASE NiceTry --for the database name, The alphabetic elements(like uppercase or lowercase) have an effect on the database name
                          --the query code will error if u write "nicetry" or "NICETRY" u must write 100% the database name coreectly
                          
    DROP TABLE table_name; -- this is for drop the table
     
--Alter
	--ALTER TABLE ->this for add table , delete or modify table
		--ALTER TABLE --> ADD
			ALTER TABLE table_name
			ADD column_name datatype;
		
			-example: 
			ALTER TABLE human
			ADD humanJob varchar(255);
		
		--ALTER TABLE -->DROP COLUMN
			ALTER TABLE table_name
			DROP COLUMN column_name;
			
			-example: 
			ALTER TABLE human
			DROP COLUMN humanJob;
			
			--espiacially for the rename we must control cause its not worked(the query said the syntax is error)
		
